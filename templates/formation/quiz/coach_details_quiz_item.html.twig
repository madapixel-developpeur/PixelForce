{% extends 'base.html.twig' %}

{% block title %} Quiz {% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="content-body-form">
			<div class="row">

						<h1 class="fw-bolder text-center mb-5">Question de quiz </h1>
							
							<div class="col-12">
								<div class="mb-3">
									<label><b>Question:</b></label>
									<p>{{item.question}}</p>
								</div>
								<div class="mb-3">
									<label><b>Choix multiple:</b></label>
									<p>{{item.multipleChoix ? 'Oui' : 'Non'}}</p>
								</div>
								
						
							</div>
						
			</div>
            
            {# <hr class="mt-3"/> #}
            <div class="d-flex align-items-center justify-content-between mt-3">
                <h3>Choix</h3>
                <a role="button" class="btn btn-success my-4" href="{{path('coach_quiz_item_choice_add', {'id': item.id})}}"><i class="fa fa-plus"></i>&nbsp;Ajouter</a>
            </div>
            <div class="table-responsive">
				<table class="table table-striped table-hover text-center sortable">
					<thead>
						<tr style="white-space:nowrap" >
							<th scope="col" class="text-center">#</th>
							<th scope="col" class="text-center">Choix</th>
							<th scope="col" class="text-center">Bonne r√©ponse</th>
                            <th scope="col" class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for choice in choices %}
							<tr>
							 	<td>{{loop.index }}</td>
							 	<td>{{choice.choix}}</td>
								<td>{{choice.vrai ? 'Oui' : 'Non' }}</td>
                                <td class="d-flex align-items-center justify-content-center">
                                    <a class="btn btn-sm btn-warning" role="button" href="{{path('coach_quiz_item_choice_edit', {'id': choice.id})}}">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <form action="{{path('coach_quiz_item_choice_delete', {'id': choice.id})}}" method="post">
                                        <button class="btn btn-sm btn-danger ms-2" type="submit">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>
            <div class="d-flex align-items-center justify-content-end mt-3">
                <a class="btn btn-warning ms-2" role="button" href="{{path('coach_quiz_details', {'id': item.formation.id})}}">
                    <i class="fa fa-arrow-left"></i>&nbsp;Revenir au quiz
                </a>
                <a class="btn btn-warning ms-2" role="button" href="{{path('coach_quiz_item_edit', {'id': item.id})}}">
                    <i class="fa fa-edit"></i>&nbsp;Modifier
                </a>
                <form action="{{path('coach_quiz_item_delete', {'id': item.id})}}" method="post">
                    <button class="btn btn-danger ms-2" type="submit">
                        <i class="fa fa-trash"></i>&nbsp;Supprimer
                    </button>
                </form>
            </div>
			
        </div>
	</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}