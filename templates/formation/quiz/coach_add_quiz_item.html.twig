{% extends 'base.html.twig' %}

{% block title %} Quiz {% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="content-body-form">
			<div class="row">
				<div class="col-sm-0 col-md-3"></div>
				<div class="col-sm-12 col-md-6">
						<h1 class="fw-bolder text-center mb-5">Question de quiz </h1>
						{{ form_start(form) }}
						<div class="row">
							
							<div class="col-12">
								<div class="mb-3">
									{{form_label(form.question)}}
									{{form_widget(form.question,{ 'attr': {'class': 'form-control'} })}}
									{{form_errors(form.question)}}
								</div>
								<div class="mb-3">
									{{form_widget(form.multipleChoix,{ 'attr': {'class': 'form-control'} })}}
									{{form_errors(form.multipleChoix)}}
								</div>
								
							</div>
						</div>
						<div class="row">
							<div class="col-md-12 text-end"><button class="btn btn-success my-4" type="submit">Enregistrer</button></div>
						</div>					
						{{ form_end(form) }}
					</div>
				<div class="col-sm-0 col-md-3"></div>
			</div>

            
			
        </div>
	</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}