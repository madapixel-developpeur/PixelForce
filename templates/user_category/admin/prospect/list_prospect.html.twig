{% extends 'base_admin.html.twig' %}

{% block title %}
	Liste des prospects
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
   <div class="mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
            
        </div>

        <!-- Formulaire de recherche -->
           <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-3 col-md-2">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    {{form_row(searchForm.email)}}
                </div>
				<div class="col-12 col-sm-3 col-md-2">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-3 col-md-3">
                    {{form_row(searchForm.adresse)}}
                </div>
                <div class="col-12 col-sm-1 col-md-3">
                    <select class="form-select" name="ordre">
                        <option value="ASC"selected>Ordre</option>
                        <option value="ASC">ASC</option>
                        <option value="DESC">DESC</option>
                    </select>
                </div>
                 <div class="col-2">
                    <label for="dateInscriptionMin" class="form-label">Type du prospect</label>
                    {{form_widget(searchForm.type)}}
                </div>
                <div class="col-2">
                    <label for="dateInscriptionMin" class="form-label">Plateforme</label>
                    {{form_widget(searchForm.platform)}}
                </div>
                <div class="col-4">
                    <label for="dateInscriptionMin" class="form-label">Date d'enregistrement à partir de</label>
                    {{form_widget(searchForm.dateInscriptionMin)}}
                </div>
                <div class="col-4">
                    <label for="dateInscriptionMax" class="form-label">Date d'enregistrement jusqu'à</label>
                    {{form_widget(searchForm.dateInscriptionMax)}}
                </div>
                <div class="col-12 col-sm-12 col-md-12 mt-3">
                    <button class="btn btn-primary "><i class="fa-solid fa-magnifying-glass"></i> Rechercher</button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>

    

        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100 mb-sm-5 mb-md-0">
                        <div class="col-md-5">
                                <h4><i class="fa fa-book-atlas"></i> Liste des prospects</h4>
                        </div>
                        {# <div class="col-md-4 mt-2">
                            <form  role="search" id="search-form" action="">
                                <div class="row g-3">
                                    <div class="col-md-8 search-form">
                                        <input name="search" value="{{ app.request.get('search') | default('') }}" class="form-control " type="search mt-1" aria-label="Search">
                                    </div>
                                    <div class="col  search-form text-end">
                                        <button class="btn btn-outline-primary ml-2" type="submit" >Rechercher</button>
                                    </div>
                                </div>
                            </form>	
                        </div>	
                            <div class="col-md-1 mt-2">
                            <a href="#" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" id="collapseButton" class="btn btn-primary  waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><span >Options</span> <i id='option-text' class="fas fa-chevron-down"></i></a>
                        </div>	 #}
                        <div class="col text-end mt-2">
                            <a href="{{ path('admin_prospect_add') }}" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Nouveau prospect</a>
                        </div>	
                    </div>
                </div>
            </div>
		</div>

       

        <div class="table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead>
					<tr>
						<th scope="col">Prénoms</th>
						<th scope="col">Email</th>
						<th scope="col">Téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Type</th>
						<th scope="col">Origine</th>
						<th scope="col">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for information in prospects %}            
                        <tr>
                            <td>{{ information.firstname }}</td>
                            <td>{{ information.email }}</td>
                            <td>{{ information.phone }}</td>
                            <td>{{ information.address }}</td>
                            <td>{{ information.stringType }}</td>
                            <td>{{ information.stringPlatformOrigin }}</td>
                            <td class="d-flex justify-content-center">
                                <a href="{{ path('admin_prospect_view', {'id': information.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('admin_prospect_edit', {'id': information.id}) }}" class="btn btn-success ms-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {# <form method="post" action="{{path('agent_prospect_info_delete', {id: prospect.id})}}" class="ms-1" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr de supprimer ce prospect ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospect.id) }}">
                                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>   #}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="7">Aucun prospect trouvé</td>
                        </tr>
                    {% endfor %}
				</tbody>
			</table>
		</div>

      

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(prospects)}}
		</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatableJs')}}
{% endblock %}

