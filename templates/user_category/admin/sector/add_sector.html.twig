{% extends 'base_admin.html.twig' %}

{% block title %}
	Edition secteur
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		.form-add-secteur{
			padding: 0 100px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="content-body-form">
			<a href="{{ path('admin_sector_list') }}" class="btn btn-secondary"> <i class="fa-solid fa-circle-arrow-left"></i> Retour </a>
			<div class="form-add-secteur">
				<div class="container">
					<h1 class="fw-bolder text-center mb-5">Ajout nouveau secteur </h1>
					{{ form_start(formSecteur) }}
					<div class="row">
						<div class="col-12">
							<h3>Information secteur</h3>
							{{ form_row(formSecteur.nom) }}
							{{ form_row(formSecteur.description) }}
							<div class="mb-3">
                                {{form_label(formSecteur.liens)}}
                                {{form_widget(formSecteur.liens,{ 'attr': {'class': 'form-control'} })}}
                                {{form_errors(formSecteur.liens)}}
                            </div>
							<div class="mb-3">
                                {{form_label(formSecteur.couverture)}}
                                {{form_widget(formSecteur.couverture,{ 'attr': {'class': 'form-control'} })}}
                                {{form_errors(formSecteur.couverture)}}
                            </div>
							<div class="mb-3">
                                {{form_label(formSecteur.affiche)}}
                                {{form_widget(formSecteur.affiche,{ 'attr': {'class': 'form-control'} })}}
                                {{form_errors(formSecteur.affiche)}}
                            </div>
							{{ form_row(formSecteur.type) }}
						
							{{ form_rest(formSecteur)  }}
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-end"><button class="btn btn-success my-4">Enregistrer</button></div>
					</div>					
					{{ form_end(formSecteur) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{parent()}}
	<script type="text/javascript">
		console.log('hello from here');
	</script>
	{% include 'user_category/admin/sector/sector_form_script.html.twig' %}
{% endblock %}