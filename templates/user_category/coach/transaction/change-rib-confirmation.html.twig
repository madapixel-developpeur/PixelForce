{% extends 'base_admin.html.twig' %}

{% block title %}
	Changer RIB
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
  <div class="my-5">
		<div class="content-body-form">
			<h1 class="text-center fw-bold">Confirmation</h1>
			<div class="form-add-coach">
				<div class="mt-3">
					<form method="post" >
						<div class="row mb-4">
							<h4 class="text-center fw-bold">Souhaitez-vous modifier votre num√©ro de compte bancaire actuel?</h4>
							<div class="col-md-12 mb-3">
								<label for="ancientRib" class="form-label required">Ancien RIB</label>
								<input type="text" id="ancientRib" name="ancientRib" class="form-control form-control" value="{{oldRib}}" disabled>
							</div>
							<div class="col-md-12 mb-3">
								<label for="ancientRib" class="form-label required">Nouveau RIB</label>
								<input type="text" id="ancientRib" name="ancientRib" class="form-control form-control" value="{{newRib}}" disabled>
							</div>
						</div>
						<div class="row mb-4">
							<div class="col-md-12 text-end">
								<button class="btn btn-primary" name="decision" value="0">Non, garder l'ancien</button>
								<button class="btn btn-success"  name="decision" value="1">Oui, changer le RIB</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
    
{% endblock %}


