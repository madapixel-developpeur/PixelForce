{% extends 'base.html.twig' %}

{% block title %}
	Liste des évènements
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <hr class="my-5">

        <!-- Liste Audit -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100">
                        <div class="col-6">
                            <h4 class="my-auto">Liste des évènements</h4>
                        </div>
                        <div class="col-6 ">
                        {% if is_granted('ROLE_COACH') %}
                            <a href="{{path('coach_add_evenement')}}" class="btn btn-primary btn-sm waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><i class="fa-solid fa-plus me-2"></i> Ajouter</a>
                        {% endif  %}
                        </div>
                    </div>
                </div>
            </div>
		</div>
        <div class="table-responsive">
			<table class="table table-striped table-hover text-center ">
				<thead>
					<tr style="white-space:nowrap" >
						<th scope="col" class="text-center">#</th>
						<th scope="col" class="text-center">Nom</th>
						<th scope="col" class="text-center">description</th>
						<th scope="col" class="text-center">Date</th>
						<th scope="col" class="text-center table-th-notSortable">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for evenement in evenements %}
                        <tr>
                            <td></td>
                            <td>{{ evenement.nom }}</td>
                            <td>{{ evenement.description }}</td>
                            <td>{{ evenement.startDate.format('Y-m-d') ~ " à "~ evenement.endDate.format('Y-m-d') }}</td>
                           
                            
                            <td style="white-space:nowrap">
                                <a href="{{ path('evenement_view', {'id': evenement.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                {% if is_granted('ROLE_COACH') %}
                                    <a href="{{ path('coach_edit_evenement', {'id': evenement.id}) }}" class="btn btn-success">
                                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                    </a>
                                {% endif  %}
                                {# {% if is_granted('ROLE_AGENT') %}
                                    <a href="#" class="btn btn-success">
                                       S'inscrire
                                    </a>
                                {% endif  %} #}
                            </td>
                        </tr>
                    {% endfor %}

				</tbody>
			</table>
		</div>

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(evenements)}}
		</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatableJs')}}
{% endblock %}

