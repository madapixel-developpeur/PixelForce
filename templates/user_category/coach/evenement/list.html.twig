{% extends 'base.html.twig' %}

{% block title %}
	Liste des évènements
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <!-- Liste Audit -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100">
                        <div class="col-6">
                            <h4 class="my-auto">Liste des évènements</h4>
                        </div>
                        <div class="col-6 ">
                        {% if is_granted('ROLE_COACH') %}
                            <a href="{{path('coach_add_evenement')}}" class="btn btn-primary btn-sm waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><i class="fa-solid fa-plus me-2"></i> Ajouter</a>
                        {% endif  %}
                        </div>
                    </div>
                </div>
            </div>
		</div>

        <div class="row">
        {% for evenement in evenements %}
           <div class="col-lg-4 col-md-6 col-12">
                <div class="card card-developer-meetup position-relative">
                    <div class="position-absolute right-0 top-0 m-3">
                        {# <a href="{{ path('calendar_index') }}" class="btn btn-primary d-flex justify-content-center align-items-center">Mon Agenda <i data-feather="calendar" class="ms-3"></i></a> #}
                    </div>
                    <div class="meetup-img-wrapper rounded-top text-center">
                        <img src="{{ asset( filesDirectory ~ evenement.couvertureFilePath) }}" alt="Meeting Pic" height="300" width="300" />
                    </div>
                    <div class="card-body" style="height:170px">
                        <h5 class="bold">{{ evenement.nom}}</h5>
                       
                        <p class="card-text ">{{ evenement.description}}</p>
                    </div>
                    <div class='container mb-3 ml-23'>
                        <p class="card-text "> 
                               {% if evenement.ville is not empty %}
                                    <i class="fa-solid fa-location-dot"></i> {{ evenement.ville}} 
                                {% endif %}
                                    <i class="fa-solid fa-clock"></i> {{  evenement.startDate.format('d-m-Y') }}</p>
                        <p class="card-text ml-5 "> <a href="{{ path('evenement_view', {'id': evenement.id}) }}" class="btn btn-primary">
                                Voir l'évènements
                        </a></p>
                    </div>
                    {# <div class="card-footer" >
                       
                    </div> #}
                </div>
            </div>
        {% endfor %}
        </div>

				

   
		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(evenements)}}
		</div>

           
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatableJs')}}
{% endblock %}

