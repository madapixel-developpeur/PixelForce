{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/templates/meeting/meeting.style.css') }}">
{% endblock %}
{% block title %}
    Script d'appel
{% endblock %}
{% block body %}
     <div class="p-5 pb-5 mb-5 bg-white border position-relative" id="form-formation">
        <h4 class="mb-3"><i class="fa fa-file"></i> Script</h4>
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.content, {'attr': {'style': 'width: 100%; height: 200px;'}}) }}
            <div class="mt-4 d-flex align-items-center justify-content-start">
                <button type="submit"  class="btn bg-princ text-white">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ckeditorForm')}}
    <script src="{{ asset('assets/templates/meeting/meeting.js') }}"></script>
{% endblock %}
