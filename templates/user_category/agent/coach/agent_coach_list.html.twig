{% extends 'base.html.twig' %}

{% block title %}
    Liste des coachs
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="mt-3">
        <!-- Formulaire de recherche -->
        <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.email)}}
                </div>
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-12 col-md-12 mt-3">
                    <button class="btn btn-primary "><i class="fa-solid fa-magnifying-glass"></i> Rechercher</button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>
        <!-- Liste coach -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class="row mb-4 mt-3 mt-m-0">
                    <div class="col-12 col-md-6 order-2 order-md-1">
                        <h4><i class="fa fa-book-atlas"></i> Liste des coachs</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover text-center">
                                    <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Photo</th>
                                        <th scope="col">Nom et prénoms</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Téléphone</th>
                                        <th scope="col">ACTION</th>
                                    </tr>
                                    </thead>
                                    <tbody class="align-items-center justify-content-center">
                                    {% for coach in coachs %}
                                        
                                            <tr class="">
                                                <td>{{ coach.id }}</td>
                                                <td >
                                                    <div class="d-flex align-items-center justify-content-center">
                                                        <div class="img">
                                                            <img src="{{ asset('files/')}}/{{coach.photo}}" class="img-thumbnail w-25" alt="">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>{{ coach.fullName }}</td>
                                                <td><a href= "mailto: {{ coach.email }}"> {{ coach.email }} </a></td>
                                                <td><a href="tel:{{ coach.telephone|default('-') }}">{{ coach.telephone|default('-') }}</a></td>
                                                <td>
                                                    <a class="btn btn-success w-100 font-weight-bold" href="#" onclick="Calendly.initPopupWidget({url: '{{coach.getLienCalendly()}}'});return false;" >Cliquez <i class="fa fa-bookmark" aria-hidden="true"></i></a>
                                                </td>    
                                            </tr>
                      
                                    {% else %}
                                        <tr>
                                            <td class="text-center" colspan="5">Aucun Coach trouvé</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <div class="pagination d-flex justify-content-center">
                                    {{ knp_pagination_render(coachs)}}
                            </div>
                        </div>
    </div>
{% endblock %}
