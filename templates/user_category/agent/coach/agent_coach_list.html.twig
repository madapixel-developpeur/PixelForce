{% extends 'base.html.twig' %}

{% block title %}
    Liste des coachs
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
     #collapseButton:focus {
            outline: none;
            box-shadow: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="mt-3">
        <!-- Formulaire de recherche -->
       
        <!-- Liste coach -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100">
                        <div class="col-6">
                            <h4 class="my-auto">Liste des coachs</h4>
                        </div>
                        <div class="col-4">
                            <form  role="search" id="search-form" action="">
                                <div class="row g-3">
                                    <div class="col-md-8 search-form">
                                        <input name="search" value="{{ app.request.get('search') | default('') }}" class="form-control " type="search mt-1" aria-label="Search">
                                    </div>
                                    <div class="col d-flex align-items-around search-form">
                                        <button class="btn btn-outline-primary ml-2" type="submit" >Rechercher</button>
                                    </div>
                                </div>
                            </form>	
                        </div>	
                        <div class="col">
                            <a href="#" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" id="collapseButton" class="btn btn-primary  waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><span >Options</span> <i id='option-text' class="fas fa-chevron-down"></i></a>
                        </div>	
                    </div>
                </div>
            </div>
		</div>
         <div class="search-form collapse mt-3 mb-5" id="collapseExample">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.email)}}
                </div>
                <div class="col-12 col-sm-6 col-md-4">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-12 col-md-12 mt-3">
                    <button class="btn btn-primary "><i class="fa-solid fa-magnifying-glass"></i> Rechercher</button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Nom et prénoms</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">ACTION</th>
                    </tr>
                    </thead>
                    <tbody class="align-items-center justify-content-center">
                    {% for coach in coachs %}
                        
                            <tr class="">
                                <td>{{ coach.id }}</td>
                                <td >
                                    <div class="d-flex align-items-center justify-content-center">
                                        <div class="img">
                                            <img src="{{ asset('files/')}}/{{coach.photo}}" class="img-thumbnail w-25" alt="">
                                        </div>
                                    </div>
                                </td>
                                <td>{{ coach.fullName }}</td>
                                <td><a href= "mailto: {{ coach.email }}"> {{ coach.email }} </a></td>
                                <td><a href="tel:{{ coach.telephone|default('-') }}">{{ coach.telephone|default('-') }}</a></td>
                                <td>
                                    <a class="btn btn-outline-primary w-100 font-weight-bold" href="#" onclick="Calendly.initPopupWidget({url: '{{coach.getLienCalendly()}}'});return false;" >Cliquez <i class="fa fa-bookmark" aria-hidden="true"></i></a>
                                </td>    
                            </tr>
        
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="5">Aucun Coach trouvé</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="pagination d-flex justify-content-center">
                    {{ knp_pagination_render(coachs)}}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
         $(document).ready(function() {
        $('#collapseExample').on('show.bs.collapse', function() {
            $('#option-text').removeClass('fa-chevron-down');
            $('#option-text').addClass('fa-chevron-up');
            $('#search-form').addClass('d-none');
        });

        $('#collapseExample').on('hide.bs.collapse', function() {
              $('#option-text').removeClass('fa-chevron-up');
            $('#option-text').addClass('fa-chevron-down');
            $('#search-form').removeClass('d-none');

        });
    });
    </script>
{% endblock %}