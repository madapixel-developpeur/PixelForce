{% extends 'base_admin.html.twig' %}

{% block title %}
	Visualisation audit
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
	{% set role = app.user.roles[0]  %}
	{% if role == constant('App\\Entity\\User::ROLE_AGENT') %}
		{% set solutions = probleme.getActiveSolutions()  %}
	{% else %}
		{% set solutions = probleme.getAllSolutions()  %}        
    {% endif %}
	<div class="mt-2">
		<a href="{{ path('audit_view', {'id': probleme.audit.id}) }}" class="btn btn-secondary"> <i class="fa-solid fa-circle-arrow-left"></i> Retour </a>

		<div class="content-card-user-information mt-3">
			<section class="app-user-view-account">
				<div class="row">
					<!-- User Content -->
					<div class="col-0  col-md-3 ">
					</div>
					<!--/ User Content -->

					<!-- User Sidebar -->
					<div class="col-12  col-md-6 order-1 order-md-0">
						{{ include ('global/card/_card_probleme_information.html.twig', {probleme :probleme}) }}
					</div>
					<!--/ User Sidebar -->

					<!-- User Content -->
					<div class="col-0  col-md-3 ">
					</div>
					<!--/ User Content -->
				</div>
				<div class="card">
						<div class="row mb-3">
							<div class="col-12  mt-2 mt-md-3">
								<div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
									<div class="row h-100">
										<div class="col-6">
											<h4 class="my-auto">Liste des solutions potentiels</h4>
										</div>
										<div class="col-6 ">
											<a href="{{ path('solution_add', {'id': probleme.id}) }}" class="btn btn-primary btn-sm waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><i class="fa-solid fa-user-plus me-2"></i> Ajouter</a>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-striped table-hover text-center sortable">
								<thead>
									<tr style="white-space:nowrap" >
										<th scope="col" class="text-center">#</th>
										<th scope="col" class="text-center">Titre</th>
										<th scope="col" class="text-center">Description</th>
										<th scope="col" class="text-center">Action</th>
									</tr>
								</thead>

								<tbody>
									{% for solution in solutions %}
										<tr>
											<td>{{ solution.id }}</td>
											<td>{{ solution.titre }}</td>
											<td>{{ solution.description}}</td>
											<td style="white-space:nowrap">
												<a href="{{path('solution_view',{'id':solution.id})}}" class="btn btn-secondary">
													<i class="fa-solid fa-eye"></i>
												</a>
												<a href="{{ path('solution_edit', {'id': solution.id}) }}" class="btn btn-secondary">
													<i class="fa fa-pencil-square" aria-hidden="true"></i>
												</a>	

												{% if solution.isActive == constant('App\\Entity\\Solution::ACTIVE_YES') %}
													<a href="{{ path('solution_delete', {'id': solution.id}) }}" class="btn btn-secondary">
													 <i class="fa fa-trash" aria-hidden="true"></i>
													</a>	
												{% else %}
													<a href="{{ path('solution_delete', {'id': solution.id}) }}" class="btn btn-secondary">
													 <i class="fa fa-undo" aria-hidden="true"></i>
													</a>	
												{% endif %}	
													
													
											</td>
										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
				
				</div>
			</section>
			
		</div>
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	{{ encore_entry_script_tags('vuexy_app_user_view_js') }}
{% endblock %}
