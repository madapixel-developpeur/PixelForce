{% extends 'base.html.twig' %}

{% block title %} Retrait {% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="content-body-form">
        <div class="row">
            <div class="col-sm-0 col-md-3"></div>
            <div class="col-sm-12 col-md-6">
					<h1 class="fw-bolder text-center mb-5">Faire un retrait </h1>
					{{ form_start(form) }}
					<div class="row">
						<div class="col-12">
							<p class="mb-3">Solde actuel : <span class="h4">  {{ solde }}</span></p>
						</div>
						<div class="col-12">
							<div class="mb-3">
                                {{form_label(form.amount)}}
                                {{form_widget(form.amount,{ 'attr': {'class': 'form-control'} })}}
                                {{form_errors(form.amount)}}
                            </div>
							
					
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-end"><button class="btn btn-success my-4" type="submit">Enregistrer</button></div>
					</div>					
					{{ form_end(form) }}
                </div>
            <div class="col-sm-0 col-md-3"></div>
		</div>
        </div>
	</div>
{% endblock %}