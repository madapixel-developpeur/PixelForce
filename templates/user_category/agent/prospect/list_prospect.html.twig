{% extends 'base.html.twig' %}

{% block title %}
	Liste  prospects agent
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
            {# {% if app.request.get('prospectMobile') and app.request.get('prospectMobile') == 'added' %}
                <div class="alert alert-success text-center">
                    Contact ajouté avec succès
                </div>
            {% endif %} #}
            
        </div>

        <!-- Formulaire de recherche -->
      

        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100 mb-sm-5 mb-md-0">
                        <div class="col-md-5 mt-2">
                           <h4><i class="fa fa-book-atlas"></i> Liste de mes prospects</h4>
                        </div>
                        <div class="col-md-4 mt-2">
                            <form action="" class="input-group rounded-3 ">
                                <button class="input-group-text border-0" id="search-addon" type="submit">
									<i class="fas fa-search"></i>
								</button>
                                <input type="search"name="search" class="form-control  input-group-text border-0" placeholder="Chercher" aria-label="Search" aria-describedby="search-addon" />
                            </form>	
                        </div>		
                        <div class="col-md-3 mt-2 text-center">
                            <a href="#" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" id="collapseButton" class="btn btn-outline-primary w-50"><span >Filter</span> <i id='option-text' class="fas fa-chevron-down"></i></a>
                        </div>	
                    </div>
                </div>
            </div>
		</div>
         <div class="search-form collapse mt-3 mb-5" id="collapseExample">
           <div class="block block--bordered block--rounded">
                                <h1 class="block__text block__text--center mt-2" >Options de filtre :</h1>
                                <div class="filter-wrap">
                                        <!-- Formulaire de recherche -->
                                        <div class="search-form">
                                            {{form_start(searchForm)}}
                                                <div class="row text-center">
                                                    <div class="col-12 col-sm-3 col-md-2">
                                                        {{form_row(searchForm.prenom)}}
                                                    </div>
                                                    <div class="col-12 col-sm-6 col-md-2">
                                                        {{form_row(searchForm.email)}}
                                                    </div>
                                                    <div class="col-12 col-sm-3 col-md-2">
                                                        {{form_row(searchForm.telephone)}}
                                                    </div>
                                                    <div class="col-12 col-sm-3 col-md-3">
                                                        {{form_row(searchForm.adresse)}}
                                                    </div>
                                                    <div class="col-12 col-sm-1 col-md-3">
                                                        <select class="form-select" name="ordre">
                                                            <option value="ASC"selected>Ordre</option>
                                                            <option value="ASC">ASC</option>
                                                            <option value="DESC">DESC</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-2">
                                                        <label for="dateInscriptionMin" class="form-label">Type du prospect</label>
                                                        {{form_widget(searchForm.type)}}
                                                    </div>
                                                    <div class="col-2">
                                                        <label for="dateInscriptionMin" class="form-label">Plateforme</label>
                                                        {{form_widget(searchForm.platform)}}
                                                    </div>
                                                    <div class="col-4">
                                                        <label for="dateInscriptionMin" class="form-label">Date d'enregistrement à partir de</label>
                                                        {{form_widget(searchForm.dateInscriptionMin)}}
                                                    </div>
                                                    <div class="col-4">
                                                        <label for="dateInscriptionMax" class="form-label">Date d'enregistrement jusqu'à</label>
                                                        {{form_widget(searchForm.dateInscriptionMax)}}
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-md-8 mt-3 d-flex align-items-center justify-content-center">
                                                            <a href="{{ path('agent_prospect_info_add') }}" class=" mt-2 btn btn-success btn-sm mx-2 rounded-3"><i class="fa fa-file-text"></i> <span class="ms-1">Ajout</span></a>                   
                                                    </div>
                                                    <div class="col-12  col-md-4 mt-3 d-flex align-items-center justify-content-end">
                                                        <button class="regular-button w-50 rounded-3 fw-bolder">Rechercher</button>
                                                    </div>
                                                </div>
                                                
                                            {{form_end(searchForm)}}
                                        </div>
                                        
                                </div>
                            </div>
        </div>

       

        <div class="table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead>
					<tr>
						<th scope="col">Prénoms</th>
						<th scope="col">Email</th>
						<th scope="col">Téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Type</th>
                        <th scope="col">Origine</th>
						<th scope="col">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for information in prospects %}            
                        <tr>
                            <td>{{ information.firstname }}</td>
                            <td>{{ information.email }}</td>
                            <td>{{ information.phone }}</td>
                            <td>{{ information.address }}</td>
                            <td>{{ information.stringType }}</td>
                            <td>{{ information.stringPlatformOrigin }}</td>
                            <td class="d-flex justify-content-center">
                                <a href="{{ path('agent_prospect_view', {'id': information.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                {# <a href="{{ path('agent_prospect_info_edit', {'id': information.id}) }}" class="btn btn-success ms-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{path('agent_prospect_info_delete', {id: prospect.id})}}" class="ms-1" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr de supprimer ce prospect ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospect.id) }}">
                                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>   #}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="7">Aucun prospect trouvé</td>
                        </tr>
                    {% endfor %}
				</tbody>
			</table>
		</div>

      

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(prospects)}}
		</div>
    </div>

    
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
         $(window).resize(function() {
            if ($(window).width() < 530) {
                $('.imp-exp-text-js').text('Imp/Exp mobile');
            }else {
                $('.imp-exp-text-js').text('Import/Export mobile');
            }
        });
    </script>

        <script>
         $(document).ready(function() {
        $('#collapseExample').on('show.bs.collapse', function() {
            $('#option-text').removeClass('fa-chevron-down');
            $('#option-text').addClass('fa-chevron-up');
            $('#search-form').addClass('d-none');
        });

        $('#collapseExample').on('hide.bs.collapse', function() {
              $('#option-text').removeClass('fa-chevron-up');
            $('#option-text').addClass('fa-chevron-down');
            $('#search-form').removeClass('d-none');

        });
    });
    </script>
{% endblock %}

