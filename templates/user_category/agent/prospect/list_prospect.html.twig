{% extends 'base.html.twig' %}

{% block title %}
	Liste  prospects agent
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
            {# {% if app.request.get('prospectMobile') and app.request.get('prospectMobile') == 'added' %}
                <div class="alert alert-success text-center">
                    Contact ajouté avec succès
                </div>
            {% endif %} #}
            
        </div>

        <!-- Formulaire de recherche -->
        <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-3 col-md-2">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-2">
                    {{form_row(searchForm.email)}}
                </div>
				<div class="col-12 col-sm-3 col-md-2">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-3 col-md-3">
                    {{form_row(searchForm.adresse)}}
                </div>
                <div class="col-12 col-sm-1 col-md-3">
                    <select class="form-select" name="ordre">
                        <option value="ASC"selected>Ordre</option>
                        <option value="ASC">ASC</option>
                        <option value="DESC">DESC</option>
                    </select>
                </div>
                 <div class="col-2">
                    <label for="dateInscriptionMin" class="form-label">Type du prospect</label>
                    {{form_widget(searchForm.type)}}
                </div>
                <div class="col-5">
                    <label for="dateInscriptionMin" class="form-label">Date d'enregistrement à partir de</label>
                    {{form_widget(searchForm.dateInscriptionMin)}}
                </div>
                <div class="col-5">
                    <label for="dateInscriptionMax" class="form-label">Date d'enregistrement jusqu'à</label>
                    {{form_widget(searchForm.dateInscriptionMax)}}
                </div>
                <div class="col-12 col-sm-12 col-md-12 mt-3">
                    <button class="btn btn-primary "><i class="fa-solid fa-magnifying-glass"></i> Rechercher</button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>

        <hr class="my-5">

        <!-- Liste agent -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class="row mb-4 mt-3 mt-m-0">
                    <div class="col-12 col-md-6 order-2 order-md-1">
                        <h4><i class="fa fa-book-atlas"></i> Liste de mes prospects</h4>
                    </div>
                    <div class="col-12 col-md-6 text-sm-start text-md-end order-1 order-md-1 mb-3 mb-md-0">
                        <a href="{{ path('agent_prospect_info_add') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Ajouter un prospect</a>
                    </div>
                </div>
            </div>
		</div>
        <div class="table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead>
					<tr>
						<th scope="col">Prénoms</th>
						<th scope="col">Email</th>
						<th scope="col">Téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Type</th>
						<th scope="col">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for information in prospects %}            
                        <tr>
                            <td>{{ information.firstname }}</td>
                            <td>{{ information.email }}</td>
                            <td>{{ information.phone }}</td>
                            <td>{{ information.address }}</td>
                            <td>{{ information.stringType }}</td>
                            <td class="d-flex justify-content-center">
                                <a href="{{ path('agent_prospect_view', {'id': information.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                {# <a href="{{ path('agent_prospect_info_edit', {'id': information.id}) }}" class="btn btn-success ms-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{path('agent_prospect_info_delete', {id: prospect.id})}}" class="ms-1" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr de supprimer ce prospect ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospect.id) }}">
                                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>   #}
                            </td>
                        </tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

      

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(prospects)}}
		</div>
    </div>

    
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
         $(window).resize(function() {
            if ($(window).width() < 530) {
                $('.imp-exp-text-js').text('Imp/Exp mobile');
            }else {
                $('.imp-exp-text-js').text('Import/Export mobile');
            }
        });
    </script>
{% endblock %}

